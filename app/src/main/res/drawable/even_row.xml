<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#E51400"
                android:endColor="#F0F0F0"
                />
            <stroke
                android:width="1dp"
                android:color="#FFFFFF" />
            <corners
                android:radius="10dp" />

            <padding
                android:left="5dp"
                android:top="4dp"
                android:right="5dp"
                android:bottom="4dp" />

        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <gradient
                android:startColor="#B2B2B2"
                android:endColor="#F0F0F0"
                />

            <stroke
                android:width="1dp"
                android:color="#FFFFFF" />

            <corners
                android:radius="10dp" />
            <padding
                android:left="5dp"
                android:top="4dp"
                android:right="5dp"
                android:bottom="4dp" />

        </shape>
    </item>



</selector>